@model SistemaApartados.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro que deseas eliminar esto?</h3>
<div class="card">
    <div class="card-header">
        <h4>Reserva</h4>
    </div>
    
    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecioTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaReserva)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaReserva)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Habitacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Habitacion.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Id)
            </dd>
        </dl>
    </div>

</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la pagina aterior</a>
</form>


