@model SistemaApartados.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="card">
    <div class="card-header">
        <h4>Reserva</h4>
    </div>
    
    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecioTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaReserva)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaReserva)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Habitacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Habitacion.NumeroHabitacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Nombre)
            </dd>
        </dl>
    </div>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la pagina anterior</a>
</div>
